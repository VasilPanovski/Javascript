<section id="viewProfile">
    <div class="content">
        <div class="chirper">

            <h2 class="titlebar">{{author}}</h2>

            <a id="btnFollow" class="chirp-author" href="#/follow">Follow</a>

            <div id="userProfileStats" class="user-details">
                <span>{{chirpsCount}} chirps</span> | <span>{{followingCount}} following</span> | <span>{{followersCount}} followers</span>
            </div>
        </div>
        <div id="profileChirps" class="chirps"><h2 class="titlebar">Chirps</h2>
            {{#each chirps}}
                {{> chirp}}
            {{/each}}
        </div>
    </div>
</section>